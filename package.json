{
  "name": "bubble-jump",
  "version": "1.0.0",
  "description": "A fun bubble jumping web game",
  "scripts": {
    "start": "npx http-server . -p 8080",
    "build": "if not exist dist mkdir dist && copy index.html dist\\ && copy game.js dist\\ && copy styles.css dist\\ && copy icon.svg dist\\ && copy manifest.json dist\\",
    "cap:init": "cap init BubbleJump com.bubblejump.app",
    "cap:add": "cap add",
    "cap:sync": "cap sync"
  },
  "dependencies": {
    "@capacitor/core": "^5.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.0",
    "@capacitor/ios": "^5.5.0",
    "@capacitor/android": "^5.5.0",
    "http-server": "^14.1.1"
  },
  "capacitor": {
    "appId": "com.bubblejump.app",
    "appName": "Bubble Jump",
    "webDir": "dist",
    "bundledWebRuntime": false,
    "ios": {
      "contentInset": "always"
    },
    "android": {
      "backgroundColor": "#40E0D0"
    }
  }
}
