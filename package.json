{
  "name": "bubble-sequence",
  "version": "1.0.0",
  "description": "A fun bubble sequence matching game",
  "scripts": {
    "start": "npx http-server . -p 8080",
    "cap:init": "cap init \"Bubble Sequence\" com.bubblesequence.app",
    "cap:add": "cap add",
    "cap:sync": "cap sync",
    "ios:build": "cap sync ios && cap open ios",
    "ios:dev": "cap run ios",
    "android:build": "cap sync android && cap open android",
    "android:dev": "cap run android"
  },
  "dependencies": {
    "@capacitor/core": "^5.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.0",
    "@capacitor/ios": "^5.5.0",
    "@capacitor/android": "^5.5.0",
    "http-server": "^14.1.1"
  },
  "capacitor": {
    "appId": "com.bubblesequence.app",
    "appName": "Bubble Sequence",
    "webDir": ".",
    "bundledWebRuntime": false,
    "ios": {
      "contentInset": "always"
    },
    "android": {
      "backgroundColor": "#1a1a1a"
    }
  }
}
